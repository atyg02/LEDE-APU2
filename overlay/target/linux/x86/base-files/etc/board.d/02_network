#!/bin/sh
#
# Copyright (C) 2017 OpenWrt.org
#

. /lib/functions/system.sh
. /lib/functions/uci-defaults.sh
. /lib/x86.sh

board_config_update

board=$(x86_board_name)

case "$board" in
pc-engines-apu2)
	ucidef_set_interfaces_lan_wan "eth1" "eth0"
	ucidef_set_interface_raw "opt" "eth2"
	;;
esac

board_config_flush

exit 0
